@model IEnumerable<AoacControl.Models.Marca>

@{
    ViewData["Title"] = "Marcas de instrumentos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Novo</a>
</p>
<table class="table table-striped table-hover table-sm table-bordered shadow">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                    <a class="badge bg-secondary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a class="badge bg-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="badge bg-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
